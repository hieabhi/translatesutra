{
  "name": "@translatesutra/electron-app",
  "version": "1.0.0",
  "description": "TranslateSutra floating desktop translator",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "dev-watch": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "rebuild": "electron-rebuild",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "build": {
    "appId": "com.translatesutra.app",
    "productName": "TranslateSutra",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "author": "TranslateSutra Team",
  "license": "MIT"
}